<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ComponentArtTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/hillton</item>
    </style>

    <style name="MaterialDialog">
        <item name="android:fontFamily">@font/hillton</item>
    </style>

    <style name="MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_dialog_title_text_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>